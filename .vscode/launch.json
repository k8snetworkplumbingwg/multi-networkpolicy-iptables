    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Attach Debugger",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 44709,
            "debugAdapter": "dlv-dap",
            "host": "localhost"
        },
        {
            "name": "Debug as Root",
            "type": "go",
            "request": "launch",
            "asRoot": true,
            "mode": "auto",
            "console": "integratedTerminal",
            "program": "${fileDirname}"
        },
    ]
}